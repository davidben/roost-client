<div class="header">
  Signatures
  <div class="remove">&times;</div>
</div>
<div class="settings-form zsig-form">
  <div class="form-top">
    <input id="new-zsig" placeholder="Zsig">
    <button class="btn add-zsig">Add signature</button>
    <label>
      Current Signatures
    </label>
  </div>
  <div class="zsigs item-list">
    {{#each zsigs}}
      <div class="zsig-line">
        <div class="zsig">
          {{this}}
        </div>
        <div style="float: right">
          <div class="remove-button remove-zsig" data-zsig-index="{{@index}}">
            &times;
          </div>
        </div>
        <div style="clear:both"></div>
      </div>
    {{/each}}
  </div>
</div>
<div class="header">
  Manage Subscriptions
</div>
<div class="settings-form subs-form">
  <div class="form-top">
    <input class="class-input subs-input" type="text" placeholder="Class"></input>
    <input class="instance-input subs-input" type="text" placeholder="Instance" value="*"></input>
    <input class="recipient-input subs-input" type="text" placeholder="Recipient"></input>
    <br>
    <button class="btn subscribe">Subscribe</button>
    <label>
      Current Subscriptions
    </label>
  </div>
  <div class="subs-table-container item-list">
    <table cellspacing="0" class="subs-table">
      {{#each subscriptions.models}}
        <tr>
          <td class="class-td" data-class="{{attributes.classKey}}">{{attributes.class}}</td>
          <td>{{attributes.instance}}</td>
          <td>{{attributes.recipient}}</td>
          <td class="remove-button close-td" data-cid="{{cid}}">&times;</td>
        </tr>
      {{/each}}
    </table>
  </div>
</div>
