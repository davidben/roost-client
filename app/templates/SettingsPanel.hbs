<div class="header">
  Signatures
</div>
<div class="settings-form zsig-form">
  <textarea id="new-zsig"></textarea>
  <button class="btn add-zsig">Add signature</button>
  <label>
    Current Signatures
  </label>
  <div class="zsigs">
    {{#each zsigs}}
      <div class="zsig">
        {{this}}
        <div class="remove-button remove-zsig" data-zsig="{{this}}">
          &times;
        </div>
        <div style="clear:both"></div>
      </div>
    {{/each}}
  </div>
</div>
<div class="header">
  Manage Subscriptions
  <div class="remove">&times;</div>
</div>
<div class="settings-form subs-form">
  <input class="class-input" type="text" placeholder="Class"></input>
  <input class="instance-input" type="text" placeholder="Instance" value="*"></input>
  <input class="recipient-input" type="text" placeholder="Recipient"></input>
  <br>
  <button class="btn subscribe">Subscribe</button>
  <label>
    Current Subscriptions
  </label>
  <div class="subs-table-container">
    <table cellspacing="0" class="subs-table">
      {{#each subscriptions.models}}
        <tr>
          <td class="class-td" data-class="{{attributes.class}}">{{attributes.class}}</td>
          <td>{{attributes.instance}}</td>
          <td>{{attributes.recipient}}</td>
          <td class="remove-button" data-cid="{{cid}}">&times;</td>
        </tr>
      {{/each}}
    </table>
  </div>
</div>
