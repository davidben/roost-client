<div class="top-bar">
  <div class="title">
    {{!-- This is getting out of hand. --}}
    {{#if filters.conversation}}
      Chat with {{filters.conversation}}
    {{else}}
      {{#if filters.instance_key_base}}
        {{#unless noClass}}
          <div class="msg-class">{{class}}</div>
          <div class="divider"></div>
        {{/unless}}
        <div class="msg-instance">{{filters.instance_key_base}}</div>
      {{else}}
        {{#if class}}
          {{class}}
        {{else}}
          All Messages
        {{/if}}
      {{/if}}
    {{/if}}
  </div>
  <div class="remove">&times;</div>
  <div class="filters">
    {{#if showFilters}}
      <i class="fa fa-filter"></i><span>&nbsp;&nbsp;Hide Filters</span>
    {{else}}
      <i class="fa fa-filter"></i><span>&nbsp;&nbsp;Show Filters</span>
    {{/if}}
  </div>
  {{#if class}}
    <div class="clear-filters">
      <i class="fa fa-ban"></i><span>&nbsp;&nbsp;Clear</span>
    </div>
  {{/if}}
</div>
{{#if showFilters}}
  <div class="filter-editor">
    <input class="class-input" type="text" placeholder="Class" value="{{#unless noClass}}{{class}}{{/unless}}"></input>
    <input class="instance-input" type="text" placeholder="Instance" value="{{filters.instance_key_base}}"></input>
    <input class="recipient-input" type="text" placeholder="Recipient" value="{{filters.recipient}}"></input>
    <button class="btn set-filters">Set Filters</button>
  </div>
{{/if}}